<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/option_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Option Item Title"
        android:padding="@dimen/options_item_padding"
        android:textSize="@dimen/options_item_text_size_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/option_value" />

    <TextView
        android:id="@+id/option_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is an options item description."
        android:padding="@dimen/options_item_padding"
        android:textSize="@dimen/options_item_text_size_desc"
        android:layout_below="@+id/option_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/option_value" />

    <EditText
        android:id="@+id/option_value"
        android:layout_width="@dimen/options_item_text_value_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/options_item_padding"
        android:layout_alignTop="@+id/option_name"
        android:layout_alignBottom="@+id/option_description"
        android:layout_alignParentEnd="true" />

</RelativeLayout>